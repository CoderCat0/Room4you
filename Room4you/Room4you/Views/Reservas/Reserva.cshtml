@model Room4you.Models.ReservaQuartosViewModel

@{
    ViewData["Title"] = "Reserva";
}

<h1>Reserva</h1>

<h4>ReservaQuartosViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reserva">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
